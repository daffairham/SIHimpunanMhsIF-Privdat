<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="assets/daftarProkerAdmin.css">
    <link rel="stylesheet" href="assets/daftarTopik.css">

    <title>Daftar Program Kerja</title>
</head>

<body>
    <header>
        <%- include('./layout/header.ejs') %>
    </header>
    <h2>Daftar Program Kerja</h2>
    <div class="container">
        
            
            <% for (const row of results){ %>
                <div class="container">
                    <table id="proker">
                        <tr>
                            <th class="nama_proker">Nama Proker</th>
                            <th class="status_proker">Status Proker Kahim</th>
                            <th class="status_proker">Status Proker Sekben</th>
                            <th class="status_proker">Status Proposal Kahim</th>
                            <th class="status_proker">Status Proposal Sekben</th>
                            <th class="status_proker">Status RAB Ketua</th>
                            <th class="status_proker">Status RAB Sekben</th>
                            
                            <th class="view">Proposal</th>
                            <th class="view">RAB</th>
                        </tr>
                        <tr>
                            <td class="nama_proker">
                                <b><%= row.namaProker %></b>
                                <br></br>
                                <%= row.isiProker %>
                            </td>
                            <td class="status_proker"><%= row.statusProkKetua %></td>
                            <td class="status_proker"><%= row.statusProkSekben %></td>
                            <td class="status_proker"><%= row.statusPropKetua %></td>
                            <td class="status_proker"><%= row.statusPropSekben %></td>
                            <td class="status_proker"><%= row.statusRabKetua %></td>
                            <td class="status_proker"><%= row.statusRabSekben %></td>
                <td class="nama_prop">
                    <form action="/isiProp" method="post">
                        <b><%= row.namaProker %></b>
                        <input type="hidden" name="id" value="<%= row.idProker %>">
                        <br>
                        <input type="submit" class="show_details" value="Lihat Isi">
                    </form>
                    
                </td>
                <td class="nama_rab">
                    <form action="/isiRab" method="post">
                        <b><%= row.namaProker %></b>
                        <input type="hidden" name="id" value="<%= row.idProker %>">
                        <br>
                        <input type="submit" class="show_details" value="Lihat Isi">
                    </form>
                    
                </td>
            </tr>
            <% } %>

        </table>
    </div>
    <div class="container_comment_luar">
        <fieldset class="container_comment"> <b>Add Comment</b>
            <form action="#addCommentKetua" method="post">
                <select>
                    <% for (const row of results){ %>
                        <option><%= row.namaProker %></option>    
                        <% } %>    
                </select>
                <textarea></textarea>
                
                <input type="submit" name="updateComment" class="gantiComment" onclick="redirect" value="Submit">
            </form>
                    
        </fieldset>
    </div>
</body>
</html>



