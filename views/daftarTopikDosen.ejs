<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="assets/daftarProker.css">
    <title>Daftar Topik Skripsi</title>
</head>
<body>
    <header>
        <%- include('./layout/header.ejs') %>
    </header>
    <div class="skripsiSayaContainer">
        <div class="skripsiSayaTop">
            
            <a href="http://localhost:8080/home">
                <img src="assets/images/leftArrow.png" alt="">
            </a>

            <h3>Daftar Topik Skripsi</h3>
            <p class="dueDateUnggah">Due/05/2022</p>

            <div class="searchAkun">
                <form method="GET" action="/daftarTopikDosen">
                    <fieldset>
                        <legend>Search by Name</legend>
                        <input type="text" name="filter" value="<%= %>">
                        <input type="submit" class="submitAkun" value="SEARCH">
                    </fieldset>
                </form>
            </div>
            
        </div>
        <br>
        <div class="skripsiSayaMain">
            <div class="innerMain">
                <% for(const row of results) { %> 
                <a class="wrapper">
                    <div class="innerMain1">
                        <div class="icon">
                            <img src="assets/images/bookIcon.jpg" class="bookIcon" alt="">
                        </div>
                        <div class="textContent">
                            <input type="hidden" name ="aTopik" value="<%= row.idTopik %>">
                            <h3><%= row.namaProker %></h3>
                            <p>Nomor Topik : <%= row.isiProker %></p>
                        </div>
                        <div class="editButton">
                            <div>
                                <p>Status: <b><%= row.statusProk %></b> </p>
                            </div>
                        </div>
                    </div>

                   
                        </div>
                    </div>
                
                </a>
                <% } %> 
            </div>
        </div>
    </div>
    <footer>
        <%- include('./layout/footer.ejs') %>
    </footer>
    
</body>
</html>
