<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="assets/daftarProker.css">
        <link rel="stylesheet" href="../public/assets/header.css">

        <title>Daftar Program Kerja</title>
    </head>

    <body>
        <header>
            <%- include('./layout/header.ejs') %>
        </header>
        <h2>Daftar Program Kerja</h2>
        <div class="container">
            <table id="proker">
                <tr>
                    <th class="nama_proker">Nama Proker</th>
                    <th class="status_proker">Status Proker Kahim</th>
                    <th class="status_proker">Status Proker Sekben</th>
                    <th class="status_proker">Status Proposal Kahim</th>
                    <th class="status_proker">Status Proposal Sekben</th>
                    <th class="status_proker">Status RAB Ketua</th>
                    <th class="status_proker">Status RAB Sekben</th>
                    
                    <th class="view">Proposal</th>
                    <th class="view">RAB</th>
                </tr>
                <% for (const row of results){ %>
                <tr>
                    <td class="nama_proker">
                        <form action="/isiProker" method="post">
                            <b><%= row.namaProker %></b>
                            <input type="hidden" name="idP" value="<%= row.idProker %>">
                            <br>
                            <input type="submit" class="show_details" value="Click to Show Details">
                            </form>
                    </td>
                    <td class="status_proker "><p><%= row.statusProkKetua %></p></td>
                    <td class="status_proker "><p><%= row.statusProkSekben %></p></td>
                    <td class="status_proker "><p><%= row.statusPropKetua %></p></td>
                    <td class="status_proker "><p><%= row.statusPropSekben %></p></td>
                    <td class="status_proker "><p><%= row.statusRabKetua %></p></td>
                    <td class="status_proker "><p><%= row.statusRabSekben %></p></td>



                    <td class="nama_prop">
                        <form action="/isiProp" method="post">
                            <input type="hidden" name="id" value="<%= row.idProker %>">
                            <br>
                            <input type="submit" class="show_details isi" value="Lihat Isi">
                        </form>
                        
                    </td>
                    <td class="nama_rab">
                        <form action="/isiRab" method="post">
                            <input type="hidden" name="id" value="<%= row.idProker %>">
                            <br>
                            <input type="submit" class="show_details isi" value="Lihat Isi">
                        </form>
                        
                    </td>
                    <td class="view add_anggota">
                        <form action="/addStaff/<%= row.idProker %>" method="get">
                            <input type="hidden" name="id" value="<%= row.idProker %>">
                            <br>
                            <input type="submit" class="show_details isi" value="Tambah Anggota">
                        </form>
                    </td>
                </tr>
                <% } %>
                
            </table>
        </div>
        <div id="container_add">
            <a href="http://localhost:8080/addProker"><button class="button add">Add Program Kerja</button></a>
        </div>
    </body>
</html>